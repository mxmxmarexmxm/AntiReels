{
  "manifest_version": 2,
  "name": "AntiReels",
  "version": "1.0",
  "description": "Short Content Blocker: Block short content from Facebook, Instagram, and YouTube.",
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["instagram.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube.js"]
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["facebook.js"]
    }
  ],
  "icons": {
    "16": "icons/antireel.png",
    "32": "icons/antireel.png",
    "48": "icons/antireel.png",
    "128": "icons/antireel.png"
  },
  "web_accessible_resources": ["icons/antireel.png"]
}
